@model FacebookPro.ViewModels.SignInVeiwModel 
@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body style=" background-color: #F3EBF6; font-family: 'Ubuntu', sans-serif;">
    <fieldset style="margin: auto; width: 60%; border: 5px solid; padding: 10px; margin-top:10px ">
        <legend>Login To Facebook</legend>

        <div>
            @Html.ValidationSummary()
        </div>
        @using (Html.BeginForm())
        {
            <table>
                <tr>
                    <td>@Html.LabelFor(a => a.Username, "Username:") </td>

                    <td>@Html.TextBoxFor(a => a.Username)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(a => a.Password, "Password: ") </td>
                    <td>@Html.PasswordFor(a => a.Password)</td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input style="background-color: #4267b2; border-radius: 5px; color: white; height: 40px; text-align: center; " type="submit" value="Log In" />
                        <input style="background-color: #4267b2; border-radius: 5px; color: white; height: 40px; text-align: center;" type="reset" value="Reset" />
                    </td>
                </tr>
            </table>

        }
        <br />
        <div>
            <p>Have not an account? @Html.ActionLink("Sign up", "Register", "Security")</p>


        </div>
    </fieldset>
  
</body>

