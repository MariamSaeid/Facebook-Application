@model IEnumerable<FacebookPro.Models.UserDetails>

@{
    ViewBag.Title = "FriendsRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Friends Request</h2>

<body style=" background-color: #F3EBF6; font-family: 'Ubuntu', sans-serif;">
    <table class="table">
        <tr>
            <th>

                <label for="FirstName">Name</label>
            </th>

            <th>
                <label for="Email">Email</label>

            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>
                    @Html.ActionLink("Accept", "Accept", new { id = item.ID }) |
                    @Html.ActionLink("Reject", "Reject", new { id = item.ID }) |
                    @Html.ActionLink("ViewProfile", "viewProfile", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
</body>